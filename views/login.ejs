    <%- include("partials/header.ejs") %>
    <form class="login-form" action="/login" method="POST">
        <h1>Login</h1>
        <label>
            <input 
              id="email" 
              placeholder="Email Id" 
              type="email" 
              name="email" 
            />
        </label>
        <label>
            <input
              id="password"
              placeholder="Password"
              type="password"
              name="password"
            />
        </label>
        <div class="warning">
            <% if (locals.authenticated === true) { %>
                <span>Login successfull</span>
            <% } else if (locals.authenticated === false) { %>
                <span>Incorrect password entered </span>        
            <% } %>
        </div>
        <p>Not registered? <a href="/register">Create Account </a></p>
        <button type="submit">Sign In</button>
    </form>
    <%- include("partials/footer.ejs") %>
